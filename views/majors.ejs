<%- include("./components/admin-left.ejs") %>

<h1>Dashboard</h1>

<div class="recent-users" style="margin-top: 4rem;">
    <div class="major-list">
        <canvas id="myChart" width="200" height="100px"></canvas>
    </div>

</div>

<!-- Recent Users -->

<div class="recent-users">
    <h2>Majors List</h2>

    <div class="major-list">
        <div class="left-side">

            <div class="input">
                <select name="#" id="selected-major">
                    <option value="none">Select Major</option>
                    <option value="Software Engineering">Software Engineering</option>
                    <option value="Biotechnoalligy">Biotechnoalligy</option>
                </select>
            </div>

            <div class="input">
                <input type="text" placeholder="Update Name">
            </div>

            <div class="input">
                <input type="number" min="1" placeholder="Update Years">
            </div>

            <div class="bottom-buttons">
                <div class="input delete">
                    <input type="submit" value="Delete">
                </div>

                <div class="input update">
                    <input type="submit" value="Update">
                </div>

            </div>
        </div>

        <div class="middle-line"></div>

        <div class="right-side">
            <div class="input">
                <input type="text" placeholder="Major Name">
            </div>

            <div class="input">
                <input type="number" min="1" placeholder="Years">
            </div>

            <div class="input">
                <input type="submit" value="Add Major">
            </div>
        </div>
    </div>

</div>

